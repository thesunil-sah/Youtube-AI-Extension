{
  "manifest_version": 3,
  "name": "YouTube AI Helper",
  "version": "0.1.0",
  "description": "Fetches YouTube captions and integrates with AI services",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
